---
import { type projectType } from "../data/data";
const { title, description, stack, github, link } = Astro.props as projectType;
---

<div class="bg-secondary card cursor-pointer" data-link={link}>
  <div class="mb-5 flex justify-between items-center">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      role="img"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="feather feather-folder"
      ><title>Folder</title><path
        d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"
      ></path></svg
    >
    <div class="links flex gap-1">
      {
        github && (
          <a href={github} target="_blank">
            <svg
              class="w-6 h-6 text-gray-800 dark:text-white"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                fill-rule="evenodd"
                d="M12.006 2a9.847 9.847 0 0 0-6.484 2.44 10.32 10.32 0 0 0-3.393 6.17 10.48 10.48 0 0 0 1.317 6.955 10.045 10.045 0 0 0 5.4 4.418c.504.095.683-.223.683-.494 0-.245-.01-1.052-.014-1.908-2.78.62-3.366-1.21-3.366-1.21a2.711 2.711 0 0 0-1.11-1.5c-.907-.637.07-.621.07-.621.317.044.62.163.885.346.266.183.487.426.647.71.135.253.318.476.538.655a2.079 2.079 0 0 0 2.37.196c.045-.52.27-1.006.635-1.37-2.219-.259-4.554-1.138-4.554-5.07a4.022 4.022 0 0 1 1.031-2.75 3.77 3.77 0 0 1 .096-2.713s.839-.275 2.749 1.05a9.26 9.26 0 0 1 5.004 0c1.906-1.325 2.74-1.05 2.74-1.05.37.858.406 1.828.101 2.713a4.017 4.017 0 0 1 1.029 2.75c0 3.939-2.339 4.805-4.564 5.058a2.471 2.471 0 0 1 .679 1.897c0 1.372-.012 2.477-.012 2.814 0 .272.18.592.687.492a10.05 10.05 0 0 0 5.388-4.421 10.473 10.473 0 0 0 1.313-6.948 10.32 10.32 0 0 0-3.39-6.165A9.847 9.847 0 0 0 12.007 2Z"
                clip-rule="evenodd"
              />
            </svg>
          </a>
        )
      }
      {
        link && (
          <a href={link} target="_blank">
            <svg
              class="w-6 h-6 text-gray-800 dark:text-white"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"
              />
            </svg>
          </a>
        )
      }
    </div>
  </div>
  <h4 class="text-xl font-bold mb-4">{title}</h4>
  <p class="text-dim mb-8">{description}</p>
  <div class="flex text-xs gap-1 flex-wrap stack text-dim">
    {stack.map((item) => <p>{item}</p>)}
  </div>
</div>

<style>
  .card {
    padding: 20px;
    border-radius: 5px;
    transition: transform 250ms ease;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .stack p {
    padding-right: 10px;
  }

  h4 {
    transition: color 250ms ease;
  }
  .card:hover h4 {
    color: #3afc7e;
  }

  svg {
    width: 40px;
    color: #3afc7e;
  }

  .links svg {
    color: grey;
    transition: color 250ms ease;
    cursor: pointer;
  }

  .links svg:hover {
    color: #3afc7e;
  }
</style>

<script>
  const card = document.querySelector(".card");
  const link = card!.getAttribute("data-link");

  card!.addEventListener("click", (event: Event) => {
    const target = event.target as HTMLElement;
    const tag = target.tagName;
    console.log(tag);
    if (tag == "svg" || tag == "path") return;
    window.open(link!, "_blank");
  });
</script>
